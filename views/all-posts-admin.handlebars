{{#each posts as |post| }}
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card" style="width: 30rem;">
          <div class="card-body">
            <a class="post-link" href="/post{{post.id}}">
              <h4 class="card-title">{{post.topic}}</h4>
              <h5 class="card-subtitle mb-2 text-body">{{post.date}}</h5>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
